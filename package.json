{
  "name": "@brainwav/xkit",
  "version": "0.7.0",
  "description": "CLI tool for tweeting, replying, reading, and archiving bookmarks via Twitter/X GraphQL API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "xkit": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "pnpm run build:dist && pnpm run build:binary",
    "build:dist": "tsc && node scripts/copy-dist-assets.js",
    "build:binary": "XKIT_VERSION=$(node -p \"require('./package.json').version\") XKIT_GIT_SHA=$(git rev-parse --short=8 HEAD 2>/dev/null || true) bun build --compile --minify --env=XKIT_* src/cli.ts --outfile xkit",
    "dev": "tsx src/cli.ts",
    "xkit": "pnpm run build:dist && node dist/cli.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:live": "pnpm run build:dist && XKIT_LIVE=1 vitest run --no-file-parallelism tests/live/live.test.ts",
    "lint": "pnpm run lint:biome && pnpm run lint:oxlint",
    "lint:biome": "biome check .",
    "lint:oxlint": "oxlint --type-aware --tsconfig tsconfig.oxlint.json --import-plugin --node-plugin --vitest-plugin --deny-warnings src tests scripts",
    "lint:docs": "vale sync && vale README.md docs/*.md && markdownlint-cli2 \"**/*.md\"",
    "lint:fix": "pnpm run lint:biome:fix && pnpm run lint:oxlint:fix",
    "lint:biome:fix": "biome check --write .",
    "lint:oxlint:fix": "oxlint --type-aware --tsconfig tsconfig.oxlint.json --import-plugin --node-plugin --vitest-plugin --deny-warnings --fix src tests scripts",
    "format": "biome format --write .",
    "binary": "pnpm run build:binary",
    "graphql:update": "tsx scripts/update-query-ids.ts",
    "changeset": "changeset",
    "version": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm run build:dist && changeset publish",
    "prepublishOnly": "pnpm run build:dist"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@steipete/sweet-cookie": "0.1.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fast-check": "^4.5.3",
    "json5": "^2.2.3",
    "kleur": "^4.1.5",
    "linkedom": "^0.18.12",
    "ollama": "^0.6.3",
    "turndown": "^7.2.2",
    "twitter-api-v2": "^1.29.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "@types/turndown": "^5.0.6",
    "@vitest/coverage-v8": "4.0.16",
    "oxlint": "^1.36.0",
    "oxlint-tsgolint": "^0.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscraik/xKit.git"
  },
  "keywords": [
    "twitter",
    "x",
    "cli",
    "tweet",
    "post",
    "graphql",
    "api",
    "bookmarks",
    "archive",
    "markdown",
    "knowledge-base"
  ],
  "author": "Jamie Craik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jscraik/xKit/issues"
  },
  "homepage": "https://github.com/jscraik/xKit#readme",
  "publishConfig": {
    "access": "public"
  }
}